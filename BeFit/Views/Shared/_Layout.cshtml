@using Microsoft.AspNetCore.Identity
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
    var isLoginPage = currentArea == "Identity" && (currentPage?.Contains("/Account/Login") == true || Context.Request.Path.Value?.Contains("/Account/Login") == true);
    var isRegisterPage = currentArea == "Identity" && (currentPage?.Contains("/Account/Register") == true || Context.Request.Path.Value?.Contains("/Account/Register") == true);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeFit</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeFit.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Poppins:wght@500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-purple" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity me-2"></i>BeFit
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item @(currentController == "Home" && currentAction == "Index" && string.IsNullOrEmpty(currentArea) ? "active" : "")">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" && string.IsNullOrEmpty(currentArea) ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item @(currentController == "Home" && currentAction == "About" && string.IsNullOrEmpty(currentArea) ? "active" : "")">
                            <a class="nav-link @(currentController == "Home" && currentAction == "About" && string.IsNullOrEmpty(currentArea) ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle me-1"></i>About
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item @(currentArea == "Dashboard" && currentController == "Dashboard" ? "active" : "")">
                                <a class="nav-link @(currentArea == "Dashboard" && currentController == "Dashboard" ? "active" : "")" asp-area="Dashboard" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="nav-logout-form">
                                    <button type="submit" class="nav-link nav-logout-btn">
                                        <i class="bi bi-box-arrow-right me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item @(isLoginPage ? "active" : "")">
                                <a class="nav-link @(isLoginPage ? "active" : "")" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-purple ms-2 @(isRegisterPage ? "active" : "")" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus me-1"></i>Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0">
        @RenderBody()
    </div>

    @await Html.PartialAsync("_Snackbar")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
