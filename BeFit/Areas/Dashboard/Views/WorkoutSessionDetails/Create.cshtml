@using BeFit.DTOs
@model WorkoutSessionDetailCreateViewModel

@{
    ViewData["Title"] = "Add Workout Session Detail";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="card p-0 border-0 shadow-sm">
            <div class="card-header bg-purple text-white">
                <div class="d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2" style="font-size: 1.5rem;"></i>
                    <h4 class="mb-0">Add New Workout Session Detail</h4>
                </div>
            </div>
            <div class="card-body p-4">
                <form asp-area="Dashboard"
                      asp-controller="WorkoutSessionDetails"
                      asp-action="Create"
                      asp-route-workoutSessionId="@Model.WorkoutSessionId"
                      method="post"
                      class="needs-validation"
                      novalidate>
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Request.ExerciseId" class="form-label fw-semibold">
                            <i class="bi bi-activity text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.ExerciseId) <span class="text-danger-emphasis">*</span>
                        </label>
                        <select asp-for="Request.ExerciseId" class="form-select" required>
                            <option value="">-- Select Exercise --</option>
                            @foreach (var exercise in Model.Exercises)
                            {
                                <option value="@exercise.Id">@exercise.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Request.ExerciseId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Request.Sets" class="form-label fw-semibold">
                                <i class="bi bi-list-ol text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.Sets) <span class="text-muted">(Optional)</span>
                            </label>
                            <input asp-for="Request.Sets" type="number" class="form-control" min="1" max="10" placeholder="Enter number of sets" />
                            <div class="form-text">Range: 1-10</div>
                            <span asp-validation-for="Request.Sets" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Request.Repetitions" class="form-label fw-semibold">
                                <i class="bi bi-arrow-repeat text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.Repetitions) <span class="text-muted">(Optional)</span>
                            </label>
                            <input asp-for="Request.Repetitions" type="number" class="form-control" min="1" max="100" placeholder="Enter number of repetitions" />
                            <div class="form-text">Range: 1-100</div>
                            <span asp-validation-for="Request.Repetitions" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Request.Weight" class="form-label fw-semibold">
                                <i class="bi bi-speedometer2 text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.Weight) <span class="text-muted">(Optional)</span>
                            </label>
                            <input asp-for="Request.Weight" type="number" step="0.01" class="form-control" min="0" max="1000" placeholder="Enter weight in kg" />
                            <div class="form-text">Range: 0-1000 kg</div>
                            <span asp-validation-for="Request.Weight" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Request.RestTimeInSeconds" class="form-label fw-semibold">
                                <i class="bi bi-clock text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.RestTimeInSeconds) <span class="text-danger-emphasis">*</span>
                            </label>
                            <input asp-for="Request.RestTimeInSeconds" type="number" class="form-control" min="0" max="1800" required placeholder="Enter rest time in seconds" />
                            <div class="form-text">Range: 0-1800 seconds (0-30 minutes)</div>
                            <span asp-validation-for="Request.RestTimeInSeconds" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Request.Tempo" class="form-label fw-semibold">
                                <i class="bi bi-stopwatch text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.Tempo) <span class="text-muted">(Optional)</span>
                            </label>
                            <input asp-for="Request.Tempo" type="text" class="form-control" maxlength="32" placeholder="e.g., 2-1-2-0" />
                            <div class="form-text">Maximum 32 characters (e.g., 2-1-2-0 for eccentric-pause-concentric-pause)</div>
                            <span asp-validation-for="Request.Tempo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Request.DurationInSeconds" class="form-label fw-semibold">
                                <i class="bi bi-hourglass-split text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.DurationInSeconds) <span class="text-muted">(Optional)</span>
                            </label>
                            <input asp-for="Request.DurationInSeconds" type="number" class="form-control" min="0" max="36000" placeholder="Enter duration in seconds" />
                            <div class="form-text">Range: 0-36000 seconds (0-10 hours)</div>
                            <span asp-validation-for="Request.DurationInSeconds" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Request.Distance" class="form-label fw-semibold">
                            <i class="bi bi-signpost-2 text-purple me-1"></i>@Html.DisplayNameFor(m => m.Request.Distance) <span class="text-muted">(Optional)</span>
                        </label>
                        <input asp-for="Request.Distance" type="number" step="0.01" class="form-control" min="0" max="100" placeholder="Enter distance in km" />
                        <div class="form-text">Range: 0-100 km</div>
                        <span asp-validation-for="Request.Distance" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-purple">
                            <i class="bi bi-check-circle me-1"></i>Create Detail
                        </button>
                        <a asp-area="Dashboard"
                           asp-controller="WorkoutSessions"
                           asp-action="Details"
                           asp-route-id="@Model.WorkoutSessionId"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
