@using BeFit.DTOs
@model WorkoutSessionDetailsViewModel

@{
    ViewData["Title"] = "Workout Session Details";
    var duration = Model.Session.EndDate - Model.Session.StartDate;
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-purple text-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar-check me-2" style="font-size: 1.5rem;"></i>
                            <h4 class="mb-0">Workout Session Information</h4>
                        </div>
                        <div>
                            <a asp-area="Dashboard"
                               asp-controller="WorkoutSessions"
                               asp-action="Edit"
                               asp-route-id="@Model.Session.Id"
                               class="btn btn-light btn-sm me-2">
                                <i class="bi bi-pencil"></i> Edit Session
                            </a>
                            <a asp-area="Dashboard"
                               asp-controller="WorkoutSessions"
                               asp-action="Index"
                               class="btn btn-outline-light btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-clock text-purple me-2" style="font-size: 1.2rem;"></i>
                                <strong class="text-muted">Start Date</strong>
                            </div>
                            <p class="fs-5 mb-0">@Model.Session.StartDate.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-clock-history text-purple me-2" style="font-size: 1.2rem;"></i>
                                <strong class="text-muted">End Date</strong>
                            </div>
                            <p class="fs-5 mb-0">@Model.Session.EndDate.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-hourglass-split text-purple me-2" style="font-size: 1.2rem;"></i>
                                <strong class="text-muted">Duration</strong>
                            </div>
                            <p class="fs-5 mb-0">
                                <span class="badge bg-purple">@($"{(int)duration.TotalHours}h {duration.Minutes}m")</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-sticky text-purple me-2" style="font-size: 1.2rem;"></i>
                                <strong class="text-muted">Notes</strong>
                            </div>
                            <p class="fs-5 mb-0">
                                @if (!string.IsNullOrWhiteSpace(Model.Session.Notes))
                                {
                                    @Model.Session.Notes
                                }
                                else
                                {
                                    <span class="text-muted">No notes</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <i class="bi bi-clipboard-data text-purple me-2" style="font-size: 1.5rem;"></i>
                    <h4 class="mb-0">Workout Session Details</h4>
                </div>
                <a asp-area="Dashboard"
                   asp-controller="WorkoutSessionDetails"
                   asp-action="Create"
                   asp-route-workoutSessionId="@Model.Session.Id"
                   class="btn btn-purple">
                    <i class="bi bi-plus-lg me-1"></i>Add Detail
                </a>
            </div>

            @if (Model.Details.Items.Count == 0)
            {
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-clipboard-data text-muted mb-3" style="font-size: 3rem;"></i>
                        <h5 class="text-muted mb-2">No Details Found</h5>
                        <p class="text-muted mb-4">You haven't added any details to this workout session yet.</p>
                        <a asp-area="Dashboard"
                           asp-controller="WorkoutSessionDetails"
                           asp-action="Create"
                           asp-route-workoutSessionId="@Model.Session.Id"
                           class="btn btn-purple">
                            <i class="bi bi-plus-lg me-1"></i>Add Your First Detail
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover shadow-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Exercise</th>
                                <th>Sets</th>
                                <th>Repetitions</th>
                                <th>Weight (kg)</th>
                                <th>Rest (sec)</th>
                                <th>Tempo</th>
                                <th>Duration (sec)</th>
                                <th>Distance (km)</th>
                                <th style="width: 200px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in Model.Details.Items)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-activity text-purple me-1"></i>
                                        <strong>@detail.ExerciseName</strong>
                                    </td>
                                    <td>
                                        @if (detail.Sets.HasValue)
                                        {
                                            <span class="badge bg-purple">@detail.Sets</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (detail.Repetitions.HasValue)
                                        {
                                            @detail.Repetitions
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (detail.Weight.HasValue)
                                        {
                                            @detail.Weight
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@detail.RestTimeInSeconds</td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(detail.Tempo))
                                        {
                                            @detail.Tempo
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (detail.DurationInSeconds.HasValue)
                                        {
                                            @detail.DurationInSeconds
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (detail.Distance.HasValue)
                                        {
                                            @detail.Distance
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Dashboard"
                                           asp-controller="WorkoutSessionDetails"
                                           asp-action="Details"
                                           asp-route-id="@detail.Id"
                                           asp-route-workoutSessionId="@Model.Session.Id"
                                           class="btn btn-sm btn-outline-purple me-1">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-area="Dashboard"
                                           asp-controller="WorkoutSessionDetails"
                                           asp-action="Edit"
                                           asp-route-id="@detail.Id"
                                           asp-route-workoutSessionId="@Model.Session.Id"
                                           class="btn btn-sm btn-outline-purple me-1">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-area="Dashboard"
                                              asp-controller="WorkoutSessionDetails"
                                              asp-action="Delete"
                                              asp-route-id="@detail.Id"
                                              asp-route-workoutSessionId="@Model.Session.Id"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this detail?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

