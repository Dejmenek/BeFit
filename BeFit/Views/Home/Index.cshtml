@{
    var exercises = ViewBag.Exercises as List<BeFit.DTOs.ExerciseResponse> ?? new List<BeFit.DTOs.ExerciseResponse>();
}
@if (exercises.Any())
{
    <section class="exercises-section py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3 text-dark">Explore Our Exercise Library</h2>
                <p class="lead text-muted">Discover a wide variety of exercises to enhance your workout routine</p>
            </div>
            <div class="row g-4">
                @foreach (var exercise in exercises)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm hover-lift">
                            <div class="card-body p-4">
                                <div class="d-flex align-items-start justify-content-between mb-3">
                                    <div class="feature-icon">
                                        <i class="bi bi-dumbbell fs-1 text-purple"></i>
                                    </div>
                                    <span class="badge bg-purple">@exercise.Category</span>
                                </div>
                                <h5 class="card-title fw-bold mb-2">@exercise.Name</h5>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-heart-pulse text-purple me-1"></i>
                                        <strong>Target:</strong> @exercise.TargetMuscle
                                    </small>
                                </div>
                                <div class="mb-3">
                                    @{
                                        var difficultyClass = exercise.Difficulty.ToString() switch
                                        {
                                            "Beginner" => "bg-success",
                                            "Intermediate" => "bg-warning",
                                            "Advanced" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @difficultyClass">@exercise.Difficulty</span>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(exercise.Equipment))
                                {
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-tools me-1"></i>
                                            @exercise.Equipment
                                        </small>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(exercise.Instructions))
                                {
                                    <p class="card-text text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                        @exercise.Instructions
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-area="Dashboard" asp-controller="Exercises" asp-action="Index" class="btn btn-purple btn-lg px-5">
                        <i class="bi bi-arrow-right-circle me-2"></i>View All Exercises
                    </a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-purple btn-lg px-5">
                        <i class="bi bi-arrow-right-circle me-2"></i>Sign Up to View All Exercises
                    </a>
                }
            </div>
        </div>
    </section>
}

