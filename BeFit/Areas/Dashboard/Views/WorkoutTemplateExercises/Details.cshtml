@using BeFit.DTOs
@using BeFit.Models.ViewModels
@model WorkoutTemplateExerciseDetailsViewModel

@{
    ViewData["Title"] = "Workout Template Exercise";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="card p-0 border-0 shadow-sm">
            <div class="card-header bg-purple text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-eye me-2" style="font-size: 1.5rem;"></i>
                        <h4 class="mb-0">Workout Template Exercise</h4>
                    </div>
                    <div>
                        <a asp-area="Dashboard"
                           asp-controller="WorkoutTemplateExercises"
                           asp-action="Edit"
                           asp-route-id="@Model.Exercise.Id"
                           asp-route-workoutTemplateId="@Model.WorkoutTemplateId"
                           class="btn btn-light btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-activity text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Exercise</strong>
                        </div>
                        <p class="fs-5 mb-0">@Model.Exercise.ExerciseName</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-list-ol text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Order</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            <span class="badge bg-purple">@Model.Exercise.Order</span>
                        </p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-list-ol text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Target Sets</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Exercise.TargetSets.HasValue)
                            {
                                <span class="badge bg-purple">@Model.Exercise.TargetSets</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-arrow-repeat text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Target Reps</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Exercise.TargetReps.HasValue)
                            {
                                @Model.Exercise.TargetReps
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-speedometer2 text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Target Weight (kg)</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Exercise.TargetWeight.HasValue)
                            {
                                @($"{Model.Exercise.TargetWeight} kg")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clock text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Rest Time</strong>
                        </div>
                        <p class="fs-5 mb-0">@Model.Exercise.RestTimeInSeconds seconds</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-stopwatch text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Tempo</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (!string.IsNullOrWhiteSpace(Model.Exercise.Tempo))
                            {
                                @Model.Exercise.Tempo
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-hourglass-split text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Target Duration</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Exercise.TargetDurationInSeconds.HasValue)
                            {
                                @($"{Model.Exercise.TargetDurationInSeconds} seconds")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-signpost-2 text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Target Distance (km)</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Exercise.TargetDistance.HasValue)
                            {
                                @($"{Model.Exercise.TargetDistance} km")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <a asp-area="Dashboard"
                       asp-controller="WorkoutTemplates"
                       asp-action="Details"
                       asp-route-id="@Model.WorkoutTemplateId"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Workout Template
                    </a>
                    <a asp-area="Dashboard"
                       asp-controller="WorkoutTemplateExercises"
                       asp-action="Edit"
                       asp-route-id="@Model.Exercise.Id"
                       asp-route-workoutTemplateId="@Model.WorkoutTemplateId"
                       class="btn btn-purple">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <form asp-area="Dashboard"
                          asp-controller="WorkoutTemplateExercises"
                          asp-action="Delete"
                          asp-route-id="@Model.Exercise.Id"
                          asp-route-workoutTemplateId="@Model.WorkoutTemplateId"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Are you sure you want to delete this exercise?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

