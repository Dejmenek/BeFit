@using BeFit.DTOs
@using BeFit.Results
@model PaginatedList<ExerciseResponse>
@{
    ViewData["Title"] = "Exercises";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-dumbbell text-purple me-2" style="font-size: 1.5rem;"></i>
            <h2 class="mb-0">Exercises</h2>
        </div>
        <a asp-action="Create" class="btn btn-purple">
            <i class="bi bi-plus-lg"></i> Add Exercise
        </a>
    </div>

    @if (Model.Items.Count == 0)
    {
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body text-center py-5">
                <i class="bi bi-dumbbell text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted mb-2">No Exercises Found</h5>
                <p class="text-muted mb-4">You haven't created any exercises yet. Add your first exercise to get started!</p>
                <a asp-action="Create" class="btn btn-purple">
                    <i class="bi bi-plus-lg"></i> Add Your First Exercise
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Items.FirstOrDefault()!.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.FirstOrDefault()!.Category)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.FirstOrDefault()!.TargetMuscle)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.FirstOrDefault()!.Difficulty)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.FirstOrDefault()!.Instructions)</th>
                        <th>@Html.DisplayNameFor(m => m.Items.FirstOrDefault()!.Equipment)</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exercise in Model.Items)
                    {
                        <tr>
                            <td>
                                <i class="bi bi-activity text-purple me-1"></i>
                                <strong>@exercise.Name</strong>
                            </td>
                            <td>
                                <span class="badge bg-purple">@exercise.Category</span>
                            </td>
                            <td>
                                <i class="bi bi-heart-pulse text-purple me-1"></i>
                                @exercise.TargetMuscle
                            </td>
                            <td>
                                @{
                                    var difficultyClass = exercise.Difficulty.ToString() switch
                                    {
                                        "Beginner" => "bg-success",
                                        "Intermediate" => "bg-warning",
                                        "Advanced" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @difficultyClass">@exercise.Difficulty</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(exercise.Instructions))
                                {
                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@exercise.Instructions">
                                        @exercise.Instructions
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(exercise.Equipment))
                                {
                                    <i class="bi bi-tools text-muted me-1"></i>
                                    @exercise.Equipment
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@exercise.Id" class="btn btn-sm btn-outline-purple me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@exercise.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this exercise?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="mt-4">
                @{
                    // Calculate the range of pages to display
                    int maxPagesToShow = 5;
                    int halfRange = maxPagesToShow / 2;
                    
                    int startPage = Math.Max(1, Model.PageNumber - halfRange);
                    int endPage = Math.Min(Model.TotalPages, Model.PageNumber + halfRange);
                    
                    // Adjust if we're near the beginning or end
                    if (endPage - startPage < maxPagesToShow - 1)
                    {
                        if (startPage == 1)
                        {
                            endPage = Math.Min(Model.TotalPages, startPage + maxPagesToShow - 1);
                        }
                        else if (endPage == Model.TotalPages)
                        {
                            startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                        }
                    }
                }
                
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">
                        Showing @((Model.TotalItems == 0) ? 0 : ((Model.PageNumber - 1) * Model.PageSize + 1))
                        to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems))
                        of @Model.TotalItems entries
                    </span>
                    <nav>
                        <ul class="pagination mb-0">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                    asp-route-pageNumber="@(Model.PageNumber - 1)"
                                    aria-label="Go to previous page">
                                        <i aria-hidden="true" class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                    asp-route-pageNumber="1"
                                    aria-label="Go to page 1">
                                        1
                                    </a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link" aria-hidden="true">...</span>
                                    </li>
                                }
                            }
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                    asp-route-pageNumber="@i"
                                    aria-label="Go to page @i">
                                        @i
                                    </a>
                                </li>
                            }
                            @if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link" aria-hidden="true">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link"
                                    asp-route-pageNumber="@Model.TotalPages"
                                    aria-label="Go to last page">@Model.TotalPages</a>
                                </li>
                            }
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                    asp-route-pageNumber="@(Model.PageNumber + 1)"
                                    aria-label="Go to next page">
                                        <i aria-hidden="true" class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
</div>
