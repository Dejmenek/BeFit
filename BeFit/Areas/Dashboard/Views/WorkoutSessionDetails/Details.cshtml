@using BeFit.DTOs
@model WorkoutSessionDetailDetailsViewModel

@{
    ViewData["Title"] = "Workout Session Detail";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="card p-0 border-0 shadow-sm">
            <div class="card-header bg-purple text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-eye me-2" style="font-size: 1.5rem;"></i>
                        <h4 class="mb-0">Workout Session Detail</h4>
                    </div>
                    <div>
                        <a asp-area="Dashboard"
                           asp-controller="WorkoutSessionDetails"
                           asp-action="Edit"
                           asp-route-id="@Model.Detail.Id"
                           asp-route-workoutSessionId="@Model.WorkoutSessionId"
                           class="btn btn-light btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-activity text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Exercise</strong>
                        </div>
                        <p class="fs-5 mb-0">@Model.Detail.ExerciseName</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-list-ol text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Sets</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Detail.Sets.HasValue)
                            {
                                <span class="badge bg-purple">@Model.Detail.Sets</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-arrow-repeat text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Repetitions</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Detail.Repetitions.HasValue)
                            {
                                @Model.Detail.Repetitions
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-speedometer2 text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Weight (kg)</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Detail.Weight.HasValue)
                            {
                                @($"{Model.Detail.Weight} kg")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-clock text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Rest Time</strong>
                        </div>
                        <p class="fs-5 mb-0">@Model.Detail.RestTimeInSeconds seconds</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-stopwatch text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Tempo</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (!string.IsNullOrWhiteSpace(Model.Detail.Tempo))
                            {
                                @Model.Detail.Tempo
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-hourglass-split text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Duration</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Detail.DurationInSeconds.HasValue)
                            {
                                @($"{Model.Detail.DurationInSeconds} seconds")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-signpost-2 text-purple me-2" style="font-size: 1.2rem;"></i>
                            <strong class="text-muted">Distance (km)</strong>
                        </div>
                        <p class="fs-5 mb-0">
                            @if (Model.Detail.Distance.HasValue)
                            {
                                @($"{Model.Detail.Distance} km")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <a asp-area="Dashboard"
                       asp-controller="WorkoutSessions"
                       asp-action="Details"
                       asp-route-id="@Model.WorkoutSessionId"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Workout Session
                    </a>
                    <a asp-area="Dashboard"
                       asp-controller="WorkoutSessionDetails"
                       asp-action="Edit"
                       asp-route-id="@Model.Detail.Id"
                       asp-route-workoutSessionId="@Model.WorkoutSessionId"
                       class="btn btn-purple">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <form asp-area="Dashboard"
                          asp-controller="WorkoutSessionDetails"
                          asp-action="Delete"
                          asp-route-id="@Model.Detail.Id"
                          asp-route-workoutSessionId="@Model.WorkoutSessionId"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Are you sure you want to delete this detail?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
