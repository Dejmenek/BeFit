@model ErrorViewModel
@{
    ViewData["Title"] = "Something went wrong";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5 px-4">
                    <div class="mb-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-danger bg-opacity-10 text-danger fw-bold" style="width:64px;height:64px;font-size:2rem;">
                            !
                        </span>
                    </div>

                    <h1 class="h3 mb-2">Something went wrong</h1>
                    <p class="text-muted mb-4">
                        An unexpected error occurred while processing your request. Please try again in a moment.
                    </p>

                    <div class="mb-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            Go to Home
                        </a>
                        <a asp-area="Dashboard" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                            Go to Dashboard
                        </a>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="small text-muted text-start mx-auto" style="max-width: 100%;">
                            <div class="fw-semibold mb-1">Technical details</div>
                            <div>
                                <span class="fw-semibold">Request ID:</span>
                                <code class="text-break">@Model.RequestId</code>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
