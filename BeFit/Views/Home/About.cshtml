@{
    ViewData["Title"] = "About";
}

<!-- Hero Section -->
<section class="about-hero-section py-5 bg-purple text-white">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center">
                <div class="fade-in">
                    <h1 class="display-3 fw-bold mb-4">Our Story</h1>
                    <p class="lead mb-4 opacity-75">
                        Built for those who never stop improving. We're on a mission to make fitness tracking 
                        simple, powerful, and accessible to everyone.
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-lg">
                            <i class="bi bi-house me-2"></i>Back to Home
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-rocket-takeoff me-2"></i>Get Started
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About BeFit Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="fade-in-up">
                    <h2 class="display-5 fw-bold mb-4 text-dark">About BeFit</h2>
                    <p class="lead text-muted mb-4">
                        BeFit is a simple yet powerful platform designed to help you stay consistent,
                        track your workouts, and achieve your fitness goals — one session at a time.
                    </p>
                    <p class="text-muted mb-4">
                        We understand that fitness is a journey, not a destination. That's why we've created 
                        a tool that grows with you, adapts to your needs, and celebrates every milestone along the way.
                    </p>
                    <div class="d-flex gap-4 mb-4">
                        <div>
                            <i class="bi bi-check-circle-fill text-purple fs-4 me-2"></i>
                            <strong>Free Forever</strong>
                        </div>
                        <div>
                            <i class="bi bi-check-circle-fill text-purple fs-4 me-2"></i>
                            <strong>No Ads</strong>
                        </div>
                    </div>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-purple btn-lg">
                        <i class="bi bi-arrow-right-circle me-2"></i>Start Your Journey
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="slide-in-right">
                    <div class="about-image-card p-4 rounded-4 shadow-lg bg-white text-center">
                        <i class="bi bi-heart-pulse display-1 text-purple mb-3"></i>
                        <h4 class="fw-bold mb-3">Your Fitness Companion</h4>
                        <p class="text-muted mb-0">
                            Track every rep, set, and workout with precision and ease.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="mission-card card h-100 border-0 shadow-sm hover-lift">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <i class="bi bi-bullseye fs-1 text-purple"></i>
                        </div>
                        <h3 class="fw-bold mb-3">Our Mission</h3>
                        <p class="text-muted mb-0">
                            We believe fitness is more than just lifting weights — it's about building
                            discipline, tracking progress, and creating habits that last a lifetime.
                        </p>
                        <p class="text-muted mt-3 mb-0">
                            Our mission is to empower individuals to take control of their health with
                            easy-to-use tools and data-driven insights that make fitness accessible to everyone.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="vision-card card h-100 border-0 shadow-sm hover-lift">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <i class="bi bi-eye fs-1 text-purple"></i>
                        </div>
                        <h3 class="fw-bold mb-3">Our Vision</h3>
                        <p class="text-muted mb-0">
                            We envision a world where everyone has the tools and motivation they need to 
                            achieve their fitness goals, regardless of their starting point.
                        </p>
                        <p class="text-muted mt-3 mb-0">
                            By making fitness tracking simple, intuitive, and free, we're helping build 
                            a healthier, more active global community.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

